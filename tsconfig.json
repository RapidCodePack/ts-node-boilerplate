{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "baseUrl": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
